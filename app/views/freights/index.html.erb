<div>
  <div class="header">
    <div class="logo"><%= image_tag 'ps_logo.png' %></div>
    <div class="header__title">Geradores de Energia</div>
  </div>

  <div class="searcher gradient">
    <p>
      CEP: <%= @address[:zipcode]%> | Cidade: <%= @address[:city]%> |
      Endereço: <%= @address[:address]%> | Estado: <%= @address[:state]%>
    </p>
  </div>

  <div class="container">
    <table>
        <tr>
          <th colspan="3"><strong>Tabela de Frete</strong></th>
        </tr>
        <tr>
          <th><strong>Peso Minimo(kg):</strong></th>
          <th><strong>Peso Maximo(kg):</strong></th>
          <th><strong>Preço (R$):</strong></th>
        </tr>
        
        <% @freights.each do |freight|%>
          <tr>
            <td><p><%= freight.weight_min%></p></td>
            <td><p><%= freight.weight_max%></p></td>
            <td><p><%= number_to_currency(freight.cost, unit: "R$ ", precision: 2, :separator => ",", :delimiter => ".") %></p></td>
          </tr>
        <% end %>

    </table>
  </div>

</div>
